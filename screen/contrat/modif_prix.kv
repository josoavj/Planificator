MDScreen:
    name: 'modif_prix'

    MDBoxLayout:
        orientation: 'vertical'
        padding: '12dp'
        spacing: '12dp'

        MDLabel:
            id: titre
            text: 'Changement de prix'
            font_size: '16sp'
            font_name: 'poppins'
            halign: 'center'
            bold: True
            size_hint_y: None
            height: '35dp'

        MDBoxLayout:
            orientation: 'vertical'
            spacing: '10dp'
            size_hint_y: None
            height: '140dp'

            MDBoxLayout:
                orientation: 'vertical'
                spacing: '5dp'
                size_hint_y: None
                height: '65dp'

                MDLabel:
                    text: 'Prix initial'
                    font_name: 'poppins'
                    font_size: '13sp'
                    size_hint_y: None
                    height: '18dp'

                MDTextField:
                    id: prix_init
                    text_color_normal: (0, 0, 0, 1)
                    mode: 'fill'
                    text_color_focus: (0, 0, 0, 1)
                    font_name: 'poppins'
                    font_size: '12sp'
                    line_color_focus: (0.33, 0.71, 0.98, 1)
                    fill_color_normal: (1, 1, 1, 1)
                    line_color_normal: (0.9, 0.9, 0.9, 1)
                    readonly: True
                    size_hint_y: None
                    height: '40dp'

            MDBoxLayout:
                orientation: 'vertical'
                spacing: '5dp'
                size_hint_y: None
                height: '65dp'

                MDLabel:
                    text: 'Nouveau prix'
                    font_name: 'poppins'
                    font_size: '13sp'
                    size_hint_y: None
                    height: '18dp'

                MDTextField:
                    id: new_price
                    text_color_normal: (0, 0, 0, 1)
                    mode: 'fill'
                    text_color_focus: (0, 0, 0, 1)
                    font_name: 'poppins'
                    font_size: '12sp'
                    line_color_focus: (0.33, 0.71, 0.98, 1)
                    fill_color_normal: (1, 1, 1, 1)
                    line_color_normal: (0.9, 0.9, 0.9, 1)
                    size_hint_y: None
                    height: '40dp'

        MDBoxLayout:
            orientation: 'horizontal'
            spacing: '12dp'
            size_hint_y: None
            height: '45dp'

            MDRaisedButton:
                text: 'Annuler'
                font_name: 'poppins'
                md_bg_color: (1, 0.2, 0.2, 1)
                text_color: (1, 1, 1, 1)
                size_hint_x: 0.5
                on_press:
                    app.cancel_modify_price()

            MDRaisedButton:
                text: 'Enregistrer'
                font_name: 'poppins'
                md_bg_color: (0.7, 0.98, 0.27, 1)
                text_color: (0, 0, 0, 1)
                size_hint_x: 0.5
                on_release:
                    app.changer_prix()